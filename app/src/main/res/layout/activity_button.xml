<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mitran.varunan.ayyappa.ButtonActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingTop="60dp"
                android:paddingRight="16dp">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    ads:adSize="SMART_BANNER"
                    ads:adUnitId="@string/banner_ad_unit_id" />

                <Button
                    android:id="@+id/button1"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adView1"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="ஹரிவராசனம்" />

                <Button
                    android:id="@+id/button2"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button1"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="வண்ண சந்த்ரோதயம்" />

                <Button
                    android:id="@+id/button3"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="தேடுகின்ற கண்களுக்குள்" />

                <Button
                    android:id="@+id/button4"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button3"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="துளசிமணி மாலை" />

                <Button
                    android:id="@+id/button5"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button4"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="அச்சன் கோவில் அரசே" />

                <Button
                    android:id="@+id/button6"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button5"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="அன்னதான பிரபுவே" />

                <Button
                    android:id="@+id/button7"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button6"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="அரியும் அரனும் இணைந்து" />

                <Button
                    android:id="@+id/button8"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button7"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="அருள் மணக்கும் ஆண்டவனே" />

                <Button
                    android:id="@+id/button9"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button8"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="ஐயப்பனை காண வாருங்கள்" />

                <Button
                    android:id="@+id/button10"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button9"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="ஐயப்பா சரணம் ஐயப்பா" />

                <Button
                    android:id="@+id/button11"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button10"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="பகவான் சரணம் பகவதி சரணம்" />

                <Button
                    android:id="@+id/button12"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button11"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="எல்லோரும் சேர்ந்து சொல்லுங்கோ" />

                <Button
                    android:id="@+id/button13"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button12"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="எங்கே மணக்குது சந்தனம்" />

                <Button
                    android:id="@+id/button14"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button13"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="என்ன வரம் வேண்டும் கேளுங்கள்" />

                <Button
                    android:id="@+id/button15"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button14"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="ஜீவன் என்பது உள்ளவரை " />

                <Button
                    android:id="@+id/button16"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button15"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="கன்னிமூல கணபதியை வேண்டி" />

                <Button
                    android:id="@+id/button17"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button16"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="மகரத்தின் மணிவிளக்கு" />

                <Button
                    android:id="@+id/button18"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button17"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="மலையாம் மலையாம் சபரிமலையாம்" />

                <Button
                    android:id="@+id/button19"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button18"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="நல் முத்து மணியோடு" />

                <Button
                    android:id="@+id/button20"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button19"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="ஓம் ஓம் அய்யப்பா" />

                <Button
                    android:id="@+id/button21"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button20"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="பள்ளிக்கட்டு சபரி மலைக்கு" />

                <Button
                    android:id="@+id/button22"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button21"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="பந்தளராஜா பம்பாவாசா" />

                <Button
                    android:id="@+id/button23"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button22"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="சரணம் விளித்தால் மரணம்" />

                <Button
                    android:id="@+id/button24"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button23"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="சன்னதியில் கட்டும் கட்டி" />

                <Button
                    android:id="@+id/button25"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button24"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="ஒண்ணாம் திருப்படி" />

                <Button
                    android:id="@+id/button26"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button25"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="எங்க கருப்ப சாமி அவர் எங்க" />

                <Button
                    android:id="@+id/button27"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button26"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="ஒரு மண்டலம் நோன்பிருந்தோம்" />

                <Button
                    android:id="@+id/button28"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button27"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="ஆகாசமாம் புள்ளி புலிமேல்" />

                <Button
                    android:id="@+id/button29"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button28"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="என் ஜனனம் முதல் என் மரணம்" />

                <Button
                    android:id="@+id/button30"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button29"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="சுப்ரபாதம் சுவாமி பள்ளி" />

                <Button
                    android:id="@+id/button31"
                    style="@style/button_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button30"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/red_button"
                    android:onClick="onClick"
                    android:text="சபரிமலைக்காடு அது" />


            </RelativeLayout>

        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
